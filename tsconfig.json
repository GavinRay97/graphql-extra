{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "target": "es2018",
    "incremental": true,

    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": ["src/**"],
  "exclude": ["node_modules/**", "coverage/**", "pkg/**", "tmp/**", "docs/**"]
}
